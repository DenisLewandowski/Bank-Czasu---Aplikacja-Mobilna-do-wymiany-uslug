<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.denislewandowski.bankczasu.fragments.MyProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/oceanBlue">

        <TextView
            android:id="@+id/userLoginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:text="null"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userLoginTextView"
            android:layout_marginStart="18dp"
            android:layout_marginTop="4dp"
            android:text="null"
            android:textColor="#FFF" />

        <ImageView
            android:id="@+id/userImageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:background="@drawable/oval_background_white"
            android:contentDescription="user_image"
            android:scaleType="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/change_login_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myprofile_element_height"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/chage_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/icon_myprofile_margin"
            android:src="@drawable/ic_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/chage_login"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_myprofile_margin"
            android:text="@string/change_login"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/icon_myprofile_margin"
            android:layout_marginEnd="@dimen/icon_myprofile_margin"
            android:background="@color/colorPrimaryDark" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/change_email_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myprofile_element_height"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/chage_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/icon_myprofile_margin"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_email" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/chage_email"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_myprofile_margin"
            android:text="@string/change_email"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/icon_myprofile_margin"
            android:layout_marginEnd="@dimen/icon_myprofile_margin"
            android:background="@color/colorPrimaryDark" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/change_photo_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myprofile_element_height"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/change_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/icon_myprofile_margin"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_change_photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/change_photo"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_myprofile_margin"
            android:text="@string/change_photo"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/icon_myprofile_margin"
            android:layout_marginEnd="@dimen/icon_myprofile_margin"
            android:background="@color/colorPrimaryDark" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/change_password_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myprofile_element_height"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/icon_myprofile_margin"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_password" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/change_password"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_myprofile_margin"
            android:text="@string/change_password"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/icon_myprofile_margin"
            android:layout_marginEnd="@dimen/icon_myprofile_margin"
            android:background="@color/colorPrimaryDark" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/myprofile_element_height"
            android:layout_alignParentBottom="true"
            android:background="@color/oceanBlue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/icon_myprofile_margin"
                android:layout_marginTop="18dp"
                android:text="@string/time_currency"
                android:textColor="#FFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/time_currency_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:layout_toLeftOf="@id/currencyImg"
                android:text="0"
                android:textColor="#FFF"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/currencyImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="@dimen/icon_myprofile_margin"
                android:src="@drawable/ic_timecurrency" />
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>