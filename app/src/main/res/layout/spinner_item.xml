<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="@color/oceanBlue"
    android:gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/time_currency_value"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:paddingTop="4dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="4dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFF" />

    <ImageView
        android:id="@+id/currency_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/time_currency_value"
        android:src="@drawable/ic_timecurrency" />

    <TextView
        android:id="@+id/time_in_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:paddingTop="3dp"
        android:layout_marginStart="6dp"
        android:text="(0min)"
        android:layout_toEndOf="@id/currency_img" />

</RelativeLayout>